{
    "compilerOptions": {
        "allowJs": false,
        "target": "ES5",
        "lib": ["ESNext"],
        "module": "ESNext",
        "moduleResolution": "node",
        "declarationDir": "./lib",
        "declaration": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./lib",
        "rootDir": "./src",
        "strict": true,
        "types": ["jest", "node"],
        "noEmit": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/tests/*",
        "**/lib/*"
    ]
}