{
    "compilerOptions": {
        "allowJs": false,
        "target": "es5",
        "lib": ["esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "declarationDir": "./lib/types",
        "declaration": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./lib",
        "rootDir": "./src",
        "strict": true,
        "types": ["jest", "node"]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/tests/*"
    ]
}